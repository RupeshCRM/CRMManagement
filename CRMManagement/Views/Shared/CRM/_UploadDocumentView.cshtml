@model CRM.ModelsVM.EzUtility.clsDocumentAttachmentVM
<div Class="card-header">
    <div Class="col-md-9">
        <div Class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Document Type</label>
            <div Class="col-sm-4">
                @Html.DropDownList("DocumentAttachmentMaster.DocCode", new SelectList(Model.DocumentList, "Value", "Text", ""), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
            </div>
        </div>
        <div Class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Issue Date</label>
            <div Class="col-sm-4">
                @Html.EditorFor(model => model.DocumentAttachment.IssueDate, new { htmlAttributes = new { @class = "form-control form-control-border", @type = "date", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
            </div>
        </div>
        <div Class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Expiry Date</label>
            <div Class="col-sm-4">
                @Html.EditorFor(model => model.DocumentAttachment.ExpiryDate, new { htmlAttributes = new { @class = "form-control form-control-border", @type = "date", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
            </div>
        </div>


        <div Class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label"></label>
            <div Class="col-sm-10">
                @Html.Partial("~/Views/Shared/EzUtility/_DocumentUpload.cshtml")
            </div>
        </div>
    </div>
 </div>

    <div Class="col-sm-12">
        <div Class="card">
            <div Class="card-header">
                <h3 Class="card-title">Uploaded Document List</h3>
            </div>
            <div Class="card-body p-0">
                <table Class="table">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th> Sno</th>
                            <th> Document Description</th>
                            <th> Issue Date</th>
                            <th> Expiry Date</th>
                            <th> Attachment</th>
                            <th> Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DocumentAttachment)
                        {
                            <tr>
                                <td>Sno</td>
                                <td>Document Description</td>
                                <td>Issue Date</td>
                                <td>Expiry Date</td>
                                <td>Attachment</td>
                                <td>Delete</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

