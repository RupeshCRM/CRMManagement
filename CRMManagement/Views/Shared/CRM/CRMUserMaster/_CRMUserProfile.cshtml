                    <div Class="col-sm-12">
                        <div class="row">
                            <div class="col-md-10">
                                @Html.ActionLink(" Back to List", "Index", new { CmpyCode = @companyCode, Id = @SectionId, userName = @userName }, new { @class = "btn btn-outline-info fa fa-arrow-left" })
                            </div>
                            <div class="col-md-2">
                                @Html.Partial("~/Views/Shared/CommonButtons.cshtml")
