                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div Class="tab-pane" id="Target">
                            <div Class="post">
                                <form Class="form-horizontal">
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Target Type</label>
                                        <div Class="input-group col-sm-10">
                                            @foreach (var option in Model.TargetTypeList)
                                            {
                                                <div class="form-check form-check-inline">
                                                    @Html.RadioButtonFor(model => model.CRMUserMaster.TargetType, option.Value == Model.CRMUserMaster.TargetType, new { @class = "form-check-input" })
