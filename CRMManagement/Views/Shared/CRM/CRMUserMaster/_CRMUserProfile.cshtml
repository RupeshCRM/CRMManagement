                                                </div>
                                            }

                                        </div>
                                        <label for="inputName" class="col-sm-2 col-form-label">Target Value</label>
                                        <div Class="input-group col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.TargetValue, new { @class = "form-control form-control-border", @placeholder = "Target Value", @value = Model.CRMUserMaster.TargetValue })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Target Calculated Type</label>
                                        <div Class="col-sm-10">
                                            @foreach (var option in Model.TargetCalculatedTypeList)
                                            {
                                                <div class="form-check form-check-inline">
                                                    @Html.RadioButtonFor(model => model.CRMUserMaster.TargetCalculatedType, option.Value == Model.CRMUserMaster.TargetCalculatedType, new { @class = "form-check-input" })
                                                    <label class="form-check-label" for="inlineRadio1">@option.Text</label>
                                                </div>
                                            }
                                            @*@Html.TextBoxFor(Model => Model.CRMUserMaster.TargetCalculated, new { @class = "form-control form-control-border", @placeholder = "Target Calculated", @value = Model.CRMUserMaster.TargetCalculated })*@
                                        </div>
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Target Calculated Amount</label>
                                        <div Class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.TargetCalculated, new { @class = "form-control form-control-border", @placeholder = "Target Calculated", @value = Model.CRMUserMaster.TargetCalculated })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Commission Type: </label>
                                        <div Class="col-sm-4">
                                            <fieldset>
                                                @foreach (var Option in Model.CRMCommissionTypeList)
                                                {
                                                    <label>
                                                        @Html.RadioButtonFor(Model => Model.CRMUserMaster.CommissionType, Option.Value, Option.Value == Model.CRMUserMaster.CommissionType) @Option.Text
                                                        @*//, strVar == "Option1"*@
                                                    </label>
                                                }
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Start Accrual from date </label>
                                        <div Class="col-sm-4">
                                            @Html.EditorFor(model => model.CRMUserMaster.StartAccrualFromDate, new { htmlAttributes = new { @class = "form-control form-control-border", @type = "date", @Value = Model.CRMUserMaster.StartAccrualFromDate.ToString("yyyy-MM-dd") } })
                                            @*@Html.TextBoxFor(Model => Model.CRMUserMaster.StartAccrualFromDate, new { @class = "form-control form-control-border", @type = "date", @value = Model.CRMUserMaster.StartAccrualFromDate.ToString("mm-dd-yyyy") })*@
                                        </div>
                                    
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Accrued Amount to Date</label>
                                        <div Class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.AccruedAmountToDate, new { @class = "form-control form-control-border", @Value = Model.CRMUserMaster.AccruedAmountToDate })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Paid to Date</label>
                                        <div Class="col-sm-4">
                                            @*<input type="date" Class="form-control form-control-border" id="inputExperience" placeholder="Paid to Date" />*@
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.PaidToDate, new { @class = "form-control form-control-border", @placeholder = "Balance", @value = Model.CRMUserMaster.PaidToDate })
                                        </div>
                                    
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Balance</label>
                                        <div Class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.Balance, new { @class = "form-control form-control-border", @placeholder = "Balance", @value = Model.CRMUserMaster.Balance })
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>

