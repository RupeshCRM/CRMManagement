                <div Class="card-body">
                    <div Class="tab-content">

                        <div Class="active tab-pane" id="UserBasicInformation1">

                            <div Class="post">
                                <form Class="form-horizontal">
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Entry Reference</label>
                                        <div Class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.Code, new { @class = "form-control form-control-border", @placeholder = "Entry Reference", @value = Model.CRMUserMaster.Code,@Disabled=true })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Employee ID</label>
                                        <div Class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.EmployeeID, new { @class = "form-control form-control-border", @placeholder = "Employee ID", @value = Model.CRMUserMaster.EmployeeID })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                                        <div class="col-sm-1">

                                            @Html.DropDownListFor(model => model.CRMUserMaster.Salutation, new SelectList(new List<SelectListItem>
                                       {
                                           new SelectListItem { Text = "Mr", Value = "Mr" },
                                           new SelectListItem { Text = "Miss", Value = "Miss" },
                                           new SelectListItem { Text = "Other", Value = "Other" }
                                        }, "Value", "Text"), "Select", new { @class = "form-control form-control-border", @style = "width: 100%;" })

                                        </div>
                                        <div Class="col-sm-3">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.FirstName, new { @class = "form-control form-control-border", @placeholder = "First Name", @value = Model.CRMUserMaster.FirstName })
                                        </div>
                                        <div Class="col-sm-3">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.LastName, new { @class = "form-control form-control-border", @placeholder = "Last Name", @value = Model.CRMUserMaster.LastName })
                                        </div>
                                        <div Class="col-sm-3">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.MiddleName, new { @class = "form-control form-control-border", @placeholder = "Middle Name  Optional", @value = Model.CRMUserMaster.MiddleName })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputName2" class="col-sm-2 col-form-label">Category</label>
                                        <div Class="col-sm-4">
                                            @Html.DropDownListFor(Model => Model.CRMUserMaster.CategoryID, new SelectList(Model.CategoryList, "Value", "Text", Model.CRMUserMaster.CategoryID), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Reporting to </label>
                                        <div Class="col-sm-4">
                                            @*@Html.TextBoxFor(Model => Model.CRMUserMaster.ReportingTo, new { @class = "form-control form-control-border", @placeholder = "Reporting to ", @value = Model.CRMUserMaster.ReportingTo })*@
                                            @Html.DropDownListFor(Model => Model.CRMUserMaster.ReportingTo, new SelectList(Model.EmployeeList, "Value", "Text", Model.CRMUserMaster.ReportingTo), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">User Name</label>
                                        <div Class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.UserName, new { @class = "form-control form-control-border", @placeholder = "User Name", @value = Model.CRMUserMaster.UserName })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Password</label>
                                        <div Class="col-sm-4">
                                            @Html.PasswordFor(Model => Model.CRMUserMaster.Password, new { @class = "form-control form-control-border", @placeholder = "Password", @value = Model.CRMUserMaster.Password })
                                        </div>
                                    </div>


                                </form>
                            </div>

                        </div>

                        <div Class="tab-pane" id="ContactInformation">
                            <div Class="post">
                                <form Class="form-horizontal">
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Mobile</label>
                                        <div Class="input-group col-sm-4">

                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.Mobile, new { @class = "form-control form-control-border contactNumber", @placeholder = "Mobile", @value = Model.CRMUserMaster.Mobile })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Email Id</label>
                                        <div Class="input-group col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.EmailID, new { @class = "form-control form-control-border", @placeholder = "Email Id", @value = Model.CRMUserMaster.EmailID })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Street</label>
                                        <div Class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMUserMaster.Street, new { @class = "form-control form-control-border", @placeholder = "Street", @value = Model.CRMUserMaster.Street })
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">City</label>
                                        <div Class="col-sm-4">
                                            @*form-control form-control-border*@
                                            @Html.DropDownListFor(Model => Model.CRMUserMaster.City, new SelectList(Model.CityList, "Value", "Text", Model.CRMUserMaster.City), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;", @value = Model.CRMUserMaster.City })

                                            @*@Html.TextBoxFor(Model => Model.CRMUserMaster.City, new { @class = "form-control form-control-border", @placeholder = "City", @value = Model.CRMUserMaster.City })*@
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">State</label>
                                        <div Class="col-sm-4">
                                            @Html.DropDownListFor(Model => Model.CRMUserMaster.State, new SelectList(Model.StateList, "Value", "Text", Model.CRMUserMaster.State), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
                                            @*@Html.TextBoxFor(Model => Model.CRMUserMaster.State, new { @class = "form-control form-control-border", @placeholder = "State", @value = Model.CRMUserMaster.State })*@
                                        </div>
                                    </div>
                                    <div Class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Country</label>
                                        <div Class="col-sm-4">
                                            @Html.DropDownListFor(Model => Model.CRMUserMaster.Country, new SelectList(Model.CountryList, "Value", "Text", Model.CRMUserMaster.Country), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
