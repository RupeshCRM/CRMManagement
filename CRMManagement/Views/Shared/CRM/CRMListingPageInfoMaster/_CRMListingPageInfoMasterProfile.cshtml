                            <div class="form-group row">
                                <label for="inputSkills" class="col-sm-2 col-form-label">Notes</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(Model => Model.CRMListingPageInfoMaster.Notes, new { @class = "form-control form-control-border", @placeholder = "Notes", @value = Model.CRMListingPageInfoMaster.Notes })
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="col-sm-12">
                        @Html.Partial("~/Views/Shared/CommonButtons.cshtml")
                        @Html.ActionLink("Back to List", "Index", new { CmpyCode = @companyCode, Id = @SectionId, userName = @userName })
                    </div>
                </div>

                @*Accordian Body*@

            </div>
        </div>
    </div>
</div>









