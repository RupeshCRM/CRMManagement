    //var oprType = Model.oprType;

    var userName = (string)Session["UserName"];
    var companyCode = (string)Session["CompanyCode"];
    var FYear = (string)Session["FYear"];
    var SectionId = @ViewBag.SectionId;
    var oprType = @ViewBag.oprType;

}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card card-cyan card-outline">
                <div class="card-body box-profile">
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle" src="~/Content/dist/img/user4-128x128.jpg" alt="User profile picture">
                    </div>
                    <h3 class="profile-username text-center">Nina Mcintire</h3>
                    <p class="text-muted text-center">Software Engineer</p>
                    <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                            <b>Followers</b> <a class="float-right">1,322</a>
                        </li>
                        <li class="list-group-item">
                            <b>Following</b> <a class="float-right">543</a>
                        </li>
                        <li class="list-group-item">
                            <b>Friends</b> <a class="float-right">13,287</a>
                        </li>
                    </ul>
                    <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                </div>

            </div>
           
            
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#Property" data-toggle="tab">Property</a></li>
                        <li class="nav-item"><a class="nav-link" href="#Notes" data-toggle="tab">Notes</a></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">


                        <div id="Property" class="active tab-pane">
                            <div class="post">
                                <form class="form-horizontal">
                                    <div class="form-group row">
                                        <label for="inputName" class="col-sm-2 col-form-label">Code</label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.Code, new { @class = "form-control form-control-border", @placeholder = "Code", @value = Model.CRMListingPageInfoMaster.Code })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Property Name: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.PropertyName, new { @class = "form-control form-control-border", @placeholder = "Property Name ", @value = Model.CRMListingPageInfoMaster.PropertyName })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Property Use: </label>
                                        <div class="col-sm-4">
                                            <fieldset>
                                                @foreach (var option in Model.PropertyUseList)
                                                {
                                                    <label>
                                                        @Html.RadioButtonFor(Model => Model.CRMListingPageInfoMaster.PropertyUse, option.Value) @option.Text
                                                        @*//, strVar == "Option1"*@
                                                    </label>
                                                }
                                            </fieldset>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">ProjectName: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.ProjectName, new { @class = "form-control form-control-border", @placeholder = "Project Name ", @value = Model.CRMListingPageInfoMaster.ProjectName })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">PropertyType: </label>
                                        <div class="col-sm-4">
                                            <fieldset>
                                                @foreach (var option in Model.PropertyTypeList)
                                                {
                                                    <label>
                                                        @Html.RadioButtonFor(Model => Model.CRMListingPageInfoMaster.PropertyType, option.Value) @option.Text
                                                        @*//, strVar == "Option1"*@
                                                    </label>
                                                }
                                            </fieldset>

                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Beds/Bath: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.BedsBath, new { @class = "form-control form-control-border", @placeholder = "Beds/Bath ", @value = Model.CRMListingPageInfoMaster.BedsBath })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputName2" class="col-sm-2 col-form-label">Street</label>
                                        <div class="col-sm-4">
                                            @Html.DropDownListFor(Model => Model.CRMListingPageInfoMaster.Street, new SelectList(Model.StreetList, "Value", "Text", Model.CRMListingPageInfoMaster.Street), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">PropertySize: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.PropertySize, new { @class = "form-control form-control-border", @placeholder = "Property Size ", @value = Model.CRMListingPageInfoMaster.PropertySize })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputName2" class="col-sm-2 col-form-label">City</label>
                                        <div class="col-sm-4">
                                            @Html.DropDownListFor(Model => Model.CRMListingPageInfoMaster.City, new SelectList(Model.CityList, "Value", "Text", Model.CRMListingPageInfoMaster.City), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">PropertyLocation: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.PropertyLocation, new { @class = "form-control form-control-border", @placeholder = "Property Location ", @value = Model.CRMListingPageInfoMaster.PropertyLocation })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputName2" class="col-sm-2 col-form-label">State</label>
                                        <div class="col-sm-4">
                                            @Html.DropDownListFor(Model => Model.CRMListingPageInfoMaster.State, new SelectList(Model.StateList, "Value", "Text", Model.CRMListingPageInfoMaster.State), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Custom Attribute: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.CustomAttributes, new { @class = "form-control form-control-border", @placeholder = "Custom Attributes ", @value = Model.CRMListingPageInfoMaster.CustomAttributes })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputName2" class="col-sm-2 col-form-label">Country</label>
                                        <div class="col-sm-4">
                                            @Html.DropDownListFor(Model => Model.CRMListingPageInfoMaster.Country, new SelectList(Model.CountryList, "Value", "Text", Model.CRMListingPageInfoMaster.Country), "Select an option", new { @class = "form-control form-control-border", @style = "width: 100%;" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Sale Price: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.SalePrice, new { @class = "form-control form-control-border", @placeholder = "Sale rice ", @value = Model.CRMListingPageInfoMaster.SalePrice })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Listing Type: </label>
                                        <div class="col-sm-4">
                                            <fieldset>
                                                @foreach (var option in Model.ListingTypeList)
                                                {
                                                    <label>
                                                        @Html.RadioButtonFor(Model => Model.CRMListingPageInfoMaster.ListingType, option.Value) @option.Text
                                                        @*//, strVar == "Option1"*@
                                                    </label>
                                                }
                                            </fieldset>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Rental Price Type: </label>
                                        <div class="col-sm-4">
                                            <fieldset>
                                                @foreach (var option in Model.RentalPriceTypeList)
                                                {
                                                    <label>
                                                        @Html.RadioButtonFor(Model => Model.CRMListingPageInfoMaster.RentalPriceType, option.Value) @option.Text
                                                        @*//, strVar == "Option1"*@
                                                    </label>
                                                }
                                            </fieldset>
                                        </div>
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Rental Price: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.RentalPrice, new { @class = "form-control form-control-border", @placeholder = "Rental Price ", @value = Model.CRMListingPageInfoMaster.RentalPrice })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Amenities: </label>
                                        <div class="col-sm-4">
                                            @foreach (var item in Model.AmenitiesList)
                                            {
                                                <div class="form-check">
                                                    <input type="checkbox" id="@("checkbox_" + item.Value)" name="SelectedValues" value="@item.Value" @(Model.CRMListingPageInfoMaster.Amenities != null && Model.CRMListingPageInfoMaster.Amenities.Contains(item.Value) ? "checked='checked'" : "") />
                                                    <label for="@("checkbox_" + item.Value)" class="form-check-label">@item.Text</label>
                                                </div>
                                            }
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Post To Portal: </label>
                                        <div class="col-sm-4">
                                            <div class="form-check">
                                                @Html.CheckBoxFor(Model => Model.CRMListingPageInfoMaster.PostToPortal, new { @class = "form-check-input" })
                                                <label class="form-check-label">Check me out</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Post To Various Portals: </label>
                                        <div class="col-sm-4">
                                            @foreach (var item in Model.PostToVariousPortalsList)
                                            {
                                                <div class="form-check">
                                                    <input type="checkbox" id="@("checkbox_" + item.Value)" name="SelectedValues" value="@item.Value" @(Model.CRMListingPageInfoMaster.PostToVariousPortals != null && Model.CRMListingPageInfoMaster.PostToVariousPortals.Contains(item.Value) ? "checked='checked'" : "") />
                                                    <label for="@("checkbox_" + item.Value)" class="form-check-label">@item.Text</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Sale Rep Contact#: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.SaleRepContactID, new { @class = "form-control form-control-border", @placeholder = "Sale Rep Contact ID ", @value = Model.CRMListingPageInfoMaster.SaleRepContactID })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">Sales Rep Email: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.SalesRepEmail, new { @class = "form-control form-control-border", @placeholder = "Sales Rep Email ", @value = Model.CRMListingPageInfoMaster.SalesRepEmail })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputExperience" class="col-sm-2 col-form-label">URL: </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(Model => Model.CRMListingPageInfoMaster.URL, new { @class = "form-control form-control-border", @placeholder = "URL ", @value = Model.CRMListingPageInfoMaster.URL })
                                        </div>
                                    </div>

                                </form>
                            </div>

                        </div>
